#home buttons GUI

from tkinter import *

canvas = Canvas(width = 300, height = 200, bg = 'yellow')

#create the window tab
root = Tk()

#MODIFY root window tab
root.title("Sudo Game")
root.geometry("450x450+500+300")

#this display 'Start Game' button
app =Frame(root)
app.grid()
button1 = Button(app, text="Start Game", bg="yellow")
button1.grid()

#this display 'instruction' button
button2= Button(app)
button2.grid()
button2.configure(text ="How To Guide", bg="yellow")

#event loop
root.mainloop()
